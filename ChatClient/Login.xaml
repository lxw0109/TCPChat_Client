<Window x:Class="ChatClient.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Welcome to TCPChatClient" Height="245.965" Width="360" Icon="Image/lxw.ico" ResizeMode="CanMinimize">
    <Window.Background>
        <SolidColorBrush Color="{DynamicResource {x:Static SystemColors.GradientActiveCaptionColorKey}}"/>
    </Window.Background>
    <Grid>
        <Button Content="Login" HorizontalAlignment="Left" Margin="111,162,0,0" VerticalAlignment="Top" Width="120" Tag="login" Click="Button_Click" Height="24"/>
        <Label Content="Please input the username in the blank:" HorizontalAlignment="Left" Margin="28,30,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="userNameTextBox" HorizontalAlignment="Left" Height="23" Margin="65,82,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="246"/>

    </Grid>
</Window>
